@using stokTakip.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>ŞEHİR   </th>
        <th>BAKİYE</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var mstr in Model)
    {
<tr>
    <td>@mstr.id</td>
    <td>@mstr.ad</td>
    <td>@mstr.soyad</td>
    <td>@mstr.sehir</td>
    <td>@mstr.bakiye</td>
    <td><a href="/Musteri/MusteriSil/@mstr.id" class="btn btn-danger">Sil</a></td>
    <td><a href="/Musteri/MusteriGetir/@mstr.id" class="btn btn-success">Güncelle</a></td>

</tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
<a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Musteri</a>

