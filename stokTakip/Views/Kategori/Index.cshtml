@using stokTakip.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.id</td>
            <td>@ktg.ad</td>
            <td><a href="/Kategori/KategoriSil/@ktg.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni Kategori</a>

